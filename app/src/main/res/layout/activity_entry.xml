<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <!-- Toolbar with Back Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:src="@drawable/backicon"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Entries"
        style="@style/CustomTextStyle"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:padding="8dp"
        android:textSize="32sp"
        android:layout_marginBottom="24dp" />

    <!-- Earn Entry Section -->
    <EditText
        android:id="@+id/inputEarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Earn (BDT)"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dark_border" />

    <Button
        android:id="@+id/btnAddEarn"
        android:text="Add Earn"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        style="@style/CustomButton" />

    <!-- Cost Entry Section -->
    <EditText
        android:id="@+id/inputCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Cost (BDT)"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dark_border" />

    <Button
        android:id="@+id/btnAddCost"
        android:text="Add Cost"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        style="@style/CustomButton" />

    <!-- Entry History Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's History"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/entryHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/dark_border">

            <!-- Content goes here -->

        </LinearLayout>
    </ScrollView>


</LinearLayout>
